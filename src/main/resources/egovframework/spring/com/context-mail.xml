        p:port="465"
        p:protocol="smtp"
        p:username="hubizictsi@hubizict.com" 
        p:password="hubizict12#">
        <property name="javaMailProperties"> 
            <props>
                <prop key="mail.smtps.debug">true</prop>
				<prop key="mail.smtp.auth">true</prop>
