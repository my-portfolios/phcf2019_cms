@charset "UTF-8";

.grid-container {
  display: grid;
  grid-template-columns: 1fr 1.5fr 0.5fr 1fr;
  grid-template-rows: 0.3fr 1.5fr 1.2fr;
  grid-template-areas: "content_title content_title content_title content_title" "container container container container" "left-box left-box right-box right-box";
}

.content_title { grid-area: content_title; }

.chart-container { grid-area: container; }

.left-box { grid-area: left-box; }

.right-box {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  grid-template-rows: 1fr 1fr;
  grid-template-areas: "righttop-box righttop-box righttop-box" "lefttop-box lefttop-box lefttop-box";
  grid-area: right-box;
}

.righttop-box { grid-area: righttop-box; }

.lefttop-box { grid-area: lefttop-box; }