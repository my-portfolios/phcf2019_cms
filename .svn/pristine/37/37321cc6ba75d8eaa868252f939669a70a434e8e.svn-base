package egovframework.phcf.nicepay.impl;

import java.util.HashMap;
import java.util.List;

import org.springframework.stereotype.Repository;

import egovframework.com.cmm.service.impl.EgovComAbstractDAO;

@Repository("NicepayDAO")
public class NicepayDAO extends EgovComAbstractDAO {

	public List<HashMap<String, Object>> getAgreeCheckList() {
		return selectList("NicepayDAO.getAgreeCheckList");
	}

	public void updateAgreeSendYn(HashMap<String, Object> paramMap) {
		update("NicepayDAO.updateAgreeSendYn", paramMap);
	}

	public List<HashMap<String, Object>> getCreatePayList(String intTodayPlus1Day) {
		return selectList("NicepayDAO.getCreatePayList", intTodayPlus1Day);
	}

	public void updatePaySendYn(HashMap<String, Object> paramMap) {
		update("NicepayDAO.updatePaySendYn", paramMap);
	}

	public List<HashMap<String, Object>> getCreateUserList() {
		return selectList("NicepayDAO.getCreateUserList");
	}

	public void updateUserSendYn(HashMap<String, Object> paramMap) {
		update("NicepayDAO.updateUserSendYn", paramMap);
	}

	public void updateDelSendYn(HashMap<String, Object> paramMap) {
		update("NicepayDAO.updateDelSendYn", paramMap);
	}
	
}
